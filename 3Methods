using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homework3
{
    class Program
    {
        static void EnterArr(int[] arr)                                  // Создаем метод ввода массива
        {
            for (int i = 0; i < arr.Length; i++)                         // Условие заполнения массива 
                {
                    arr[i] = Convert.ToInt32(Console.ReadLine());        // Заплняем наш массив с консоли   
                }
            return;                                                      // Возвращаем наш массив
        }

        static void OutArr(int[] arr)                                    // Создаем метод вывода массива                
        {
            for (int b = 0; b < arr.Length; b++)
                {
                    Console.Write(arr[b]);
                    Console.Write(" ");
                }
            return;
        }

        static void Main(string[] args)
        {

            Console.Write("Введите длину массива: ");
            int len = Convert.ToInt32(Console.ReadLine());              // Инициализируем длину массива и вводим её с консоли
            int[] arr = new int[len];                                   // Инициализируем массив
            EnterArr(arr);                                              // Заполняем элементами наш массив с помощью метода "EnterArr"     

            Console.Write("\nВаш массив: ");
            for (int i = 0; i < len; i++)
            {
                Console.Write(arr[i]);                                  // Выводим наш массив на консоль (для самопроверки)
                Console.Write(" ");
            }

            MinMax(arr);                                                // Применяем метод "MinMax", который находит минимальный и максимальный элементы массива и меняет их местами. 

            Console.Write("\nМассив в котором поменяли местами минимальное и максимальное значения: ");

            OutArr(arr);                                                // Применяем метод "Outarr" для вывода нашего массива на консоль                
            Console.ReadKey();
        }

        static void MinMax(int[] arr)                                    // Создаем метод для нахождения минимального и максимального значения массива и замены их местами  
        {
            int mini = arr[0];                                           // Инициализируем переменную для минимального элемента массива и присваиваем ей значение 0-го элемента массива
            int indmini = 0;                                             // Инициализируем переменную для индекса минимального элемента массива
            for (int y = 0; y < arr.Length; y++)                         // Перебор массива    
            {
                if (arr[y] < mini)                                       // Условие сравнения каждого значения массива со значением 0-го элемента массива
                {
                    mini = arr[y];                                       // Присваивание нашей переменной минимального значения
                    indmini = y;                                         // Присваивание нашей переменной индекса минимального значения
                }
            }

            int maxi = arr[0];                                           // Инициализируем переменную для максимального элемента массива и присваиваем ей значение 0-го элемента массива
            int indmaxi = 0;                                             // Инициализируем переменную для индекса максимального элемента массива
            for (int w = 0; w < arr.Length; w++)                         // Перебор массива    
            {
                if (arr[w] > maxi)                                       // Условие сравнения каждого значения массива со значением 0-го элемента массива
                {
                    maxi = arr[w];                                       // Присваивание нашей переменной максимального значения
                    indmaxi = w;                                         // Присваивание нашей переменной индекса максимального значения
                }
            }

            int empty = 0;                                               // Инициализируем переменную для обмена значениями массива                                
            empty = arr[indmaxi];                                        // Присваиваем переменной максимальное значение массива 
            arr[indmaxi] = arr[indmini];                                 // Присваиваем максимальному значению массива минимальное значение
            arr[indmini] = empty;                                        // Присваиваем минимальному значению массива максимальное значение

            return;
        }
    }
}
