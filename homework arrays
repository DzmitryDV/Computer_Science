using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homework3
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = 5;                                              // Инициализируем длину массива
            int[] arr = new int[n];                                 // Инициализируем массив
            int k = 0;                                              // Инициализируем счетчик для цикла "while"    
            while (k < n)                                           
                    {
                        arr[k] = Convert.ToInt32(Console.ReadLine()); // Заполняем наш массив элементами с консоли
                        k++;
                    }

            Console.Write("\nВаш массив: ");                    
                for (int i = 0; i < n; i++)                         
                    {
                        Console.Write(arr[i]);                      // Выводим наш массив на консоль (для самопроверки)
                        Console.Write(" ");
                    }

            int summa = 0;                                          // Инициализируем переменную для суммы элементов нашего массива
                for (int z = 0; z < n; z++)                         // Перебираем наш массив по элементам и сумируем их
                    {
                        summa = summa + arr[z];
                    }
            Console.WriteLine($"\nСумма всех элементов массива равна: {summa}"); // Выводим сумму элементов массива на консоль

            Console.Write("\nВывод вашего массива в обратном порядке: ");      

                for (int x = n-1; x >= 0; x--)                      // x = n-1, т.к. длина массива "n" равна 5, а индекс 5-го элемента равен 4. Пока х будет >= 0(нулевой индекс нашего массива), будем выводить элементы в обратном порядке. 
                    {
                        Console.Write(arr[x]);                      // Выводим массив на консоль в обратном порядке
                        Console.Write(" ");
                    }
            
            int mini = arr[0];                                      // Инициализируем переменную для минимального элемента массива и присваиваем ей значение 0-го элемента массива
            int indmini = 0;                                        // Инициализируем переменную для индекса минимального элемента массива
                for (int y = 0; y < n; y++)                         // Перебор массива    
                    {
                        if (arr[y] < mini )                         // Условие сравнения каждого значения массива со значением 0-го элемента массива
                            {
                                mini = arr[y];                      // Присваивание нашей переменной минимального значения
                                indmini = y;                        // Присваивание нашей переменной индекса минимального значения
                            }
                    }
            Console.Write($"\nМинимальный элемент масива равен: {mini}");
            
            int maxi = arr[0];                                      // Инициализируем переменную для максимального элемента массива и присваиваем ей значение 0-го элемента массива
            int indmaxi = 0;                                        // Инициализируем переменную для индекса максимального элемента массива
                for (int w = 0; w < n; w++)                         // Перебор массива    
                    {
                        if (arr[w] > maxi)                          // Условие сравнения каждого значения массива со значением 0-го элемента массива
                            {
                                maxi = arr[w];                      // Присваивание нашей переменной максимального значения
                                indmaxi = w;                        // Присваивание нашей переменной индекса максимального значения
                            }
                    }
            Console.Write($"\nМаксимальный элемент масива равен: {maxi}");

            int empty = 0;                                          // Инициализируем переменную для обмена значениями массива                                
            empty = arr[indmaxi];                                   // Присваиваем переменной максимальное значение массива 
            arr[indmaxi] = arr[indmini];                            // Присваиваем максимальному значению массива минимальное значение
            arr[indmini] = empty;                                   // Присваиваем минимальному значению массива максимальное значение

            Console.Write("\nВывод массива, в котором минимальное и максимальное значения поменяли местами: ");
                for (int d = 0; d < n; d++)
                    {
                        Console.Write(arr[d]);                      // Выводим массив, в котором поменяли местами максимальное и минимальное значение
                        Console.Write(' ');
                    }   
            Console.ReadKey();
        }
    }
}
